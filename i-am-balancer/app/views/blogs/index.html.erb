<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">
<h1>Blogs and Recipes!</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <hr>
        <td class=""><%= link_to 'Show', blog %></td>
        <td class="noshow"><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td class=""><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

# <%= link_to 'New Blog', new_blog_path %>
</div>
</div>